[ ca ]
default_ca		= CA_default

[ CA_default ]
dir			= ./
certs			= $dir
crl_dir			= $dir/crl
database		= $dir/index.txt
new_certs_dir		= $dir
certificate		= $dir/ca.pem
serial			= $dir/serial
crl			= $dir/crl.pem
private_key		= $dir/ca.key
RANDFILE		= $dir/.rand
name_opt		= ca_default
cert_opt		= ca_default
default_days		= 60
default_crl_days	= 30
default_md		= sha256
preserve		= no
policy			= policy_match
{% if cert_crl_uri is defined %}
crlDistributionPoints	= URI:{{cert_crl_uri}}
{% else %}
#crlDistributionPoints	= URI:http://www.example.org/example_ca.crl
{% endif %}



[ policy_match ]
countryName		= match
stateOrProvinceName	= match
organizationName	= match
organizationalUnitName	= optional
commonName		= supplied
emailAddress		= optional

[ policy_anything ]
countryName		= optional
stateOrProvinceName	= optional
localityName		= optional
organizationName	= optional
organizationalUnitName	= optional
commonName		= supplied
emailAddress		= optional

[ req ]
prompt			= no
distinguished_name	= certificate_authority
default_bits		= 2048
input_password		= whatever
output_password		= whatever
x509_extensions		= v3_ca

[certificate_authority]
countryName		= {{cert_country}}
{% if cert_state is defined %}
stateOrProvinceName	= {{cert_state}}
{% else %}
#stateOrProvinceName	=
{% endif %}
{% if cert_local is defined %}
localityName		= {{cert_local}}
{% else %}
#localityName		=
{% endif %}
{% if cert_org is defined %}
organizationName	= {{cert_org}}
{% else %}
#organizationName	=
{% endif %}
{% if cert_unit is defined %}
organizationalUnitName	= {{cert_unit}}
{% else %}
#organizationalUnitName	=
{% endif %}
{% if cert_ca_email is defined %}
emailAddress		= {{cert_ca_email}}
{% else %}
#emailAddress	=
{% endif %}
commonName		= {{cert_ca_common_name}}

[v3_ca]
subjectKeyIdentifier	= hash
authorityKeyIdentifier	= keyid:always,issuer:always
basicConstraints	= critical,CA:true
{% if cert_crl_uri is defined %}
crlDistributionPoints	= URI:{{cert_crl_uri}}
{% else %}
#crlDistributionPoints	= URI:http://www.example.org/example_ca.crl
{% endif %}

